{% extends 'base.html.twig' %} 
{% block body %} 
    <table class="table mx-auto" border="2" style="width:400px" > 
        <tr> 
            <th>Distributeur</th> 
            <th> 
            <table> 
                <th width="120px">Produit</th> 
                <th>Référence</th> 
            </table> 
            </th> 
        </tr> 
        {% for distributeur in distributeurs %} 
            <tr> 
                <td>{{ distributeur.nom }}</td> 
                <td> 
                <table border="2" style="background-color:grey; "> 
