            {% for produit in distributeur.produits %} 
                    <tr> 
                <td align="center">{{ produit.nom }}</td> 
                <td align="center">{{ produit.reference.numero }}</td> 
                    </tr> 
            {% endfor %} 
            {% endif %} 
                    </table> 
                </td> 
            </tr> 
        {% endfor %} 
    </table> 
{% endblock %} 